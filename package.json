    "dev:netlify": "npx netlify dev",
    "deploy:prod": "npm run build && git add . && git commit -m 'ðŸš€ latest update' || echo 'No changes to commit' && git pull --rebase origin main && git push origin main && npx netlify deploy --prod --dir=dist && npx open https://simple_app.netlify.app"

  },
